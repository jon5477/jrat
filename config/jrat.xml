<jrat-configuration>

    <settings>
        <property name="x" value="y"/>
    </settings>

    <profile>

        <criteria>
            <include className="*Servlet" methodName="do*"/>
            <include className="*Servlet" methodName="service"/>
            <include className="Foo*"/>
        </criteria>

        <handlers>

            <handler factory="org.shiftone.jrat.provider.stats.StatMethodHandlerFactory">
                <property name="CompressOutput" value="false"/>
                <property name="RecordUnused" value="false"/>
                <property name="OutputFile" value="MyStatOuputFile"/>
            </handler>

            <handler factory="org.shiftone.jrat.provider.tree.TreeMethodHandlerFactory">
                <property name="CompressOutput" value="false"/>
            </handler>

        </handlers>

    </profile>

</jrat-configuration>